}
.dsw.wx-swiper-dots.wx-swiper-dots-horizontal{
     margin-bottom: 2rpx;
}
.dsw .wx-swiper-dot{
    width:30rpx;
    display: inline-flex;
    height: 5rpx;
    margin-left: 20rpx;
    justify-content:space-between;
}
.dsw .wx-swiper-dot::before{
   content: '';
    flex-grow: 1; 
    background: rgba(255,255,255,1);  
}
.dsw .wx-swiper-dot-active::before{
