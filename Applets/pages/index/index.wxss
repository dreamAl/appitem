.searchBox{
  width: 100%;
  height:116rpx;
  background: #efefef;
  overflow: hidden;
  position: relative;
}
input{
  width: 90%;
  height:70rpx;
  background: white;
  border-radius: 50rpx;
  margin:25rpx 5% 0; 
  text-indent: 280rpx; 
}
.seaImg{
  width: 60rpx;
  height:60rpx;
  position: absolute;
  top:35rpx;
  left:250rpx;
 
}
.seaImg>image{
  width: 90%;
  height:90%;
}
.swpBox{
  width: 100%; 
  height:400rpx;
}
.imgBox{
  width: 100%;
  height:100%;
}
.swpBox.wx-swiper-dots.wx-swiper-dots-horizontal{
     margin-bottom: 2rpx;
}
.swpBox .wx-swiper-dot{
    width:30rpx;
    display: inline-flex;
    height: 5rpx;
    margin-left: 20rpx;
    justify-content:space-between;
}
.swpBox .wx-swiper-dot::before{
   content: '';
    flex-grow: 1; 
    background: rgba(255,255,255,1);  
}
.swpBox .wx-swiper-dot-active::before{
    background:#3371aa; 
}
.routeBox{
  width: 100%;
  height:92rpx;
  font-size: 30rpx;
  font-weight: bold;
  color:#323232;
  display: flex;
  overflow: auto;
  line-height: 92rpx;
  text-align: center;
}
.routeBox text{
  flex-shrink:0;
  width: 190rpx;
  height:88rpx;   
}
.active{
  color:#4697e4;
  border-bottom: 4rpx solid #4697e4;
}
.con{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  background: #f8f8f8;
}
.listBox{
  width: 47%;
  height:600rpx;
  background: white; 
  margin:30rpx 10rpx 0;
}
.imgStyle{
  width: 95%;
  height:350rpx;
  margin: 10rpx;
}
.textBox{
  width: 95%;
  margin: 10rpx;
}
.line{
  width: 85%;
  height: 50rpx;
  display: block;
  white-space: nowrap;
/* 小程序单行文本添加省略号 */
  -webkit-line-clamp:1;
  overflow: hidden;
  text-overflow: ellipsis;
}
